{
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["import", "prettier", "no-only-tests"],
  "env": {
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "eqeqeq": ["error", "smart"],
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "linebreak-style": 0,
    "import/prefer-default-export": 0,
    "global-require": 0,
    "prefer-destructuring": 0,
    "no-use-before-define": 0,
    "consistent-return": 0,
    "camelcase": 0
  }
}
